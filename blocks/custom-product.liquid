{% assign product = all_products[block.settings['custom-product']] %}

{% for image in product.images %}
  {{ image.src | product_img_url: 'grande' | image_tag }}
  {% comment %}
    <img src="{{ image.src | product_img_url: 'grande' }}">
    {{ product.title }}
    {{ product.price | money_without_trailing_zeros }}
    {{ product.description }}
  {% endcomment %}
{% endfor %}

{% schema %}
{
  "name": "Custom Product",
  "class":"custom-product-main",
  "settings": [
    {
      "type": "product",
      "id": "custom-product",
      "label": "Product"
    },
  ],
  "presets": [
    { "name": "Custom Product" },
  ]
}
{% endschema %}
