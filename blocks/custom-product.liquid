<div class="custom-product-wrapper">
  <!-- <img src="{{ product.featured_image | img_url: 'master' }}" alt="{{ product.title | escape }}"> -->
  {%- unless block.settings['custom-product'] -%}
    {% render 'product-media-gallery', product: product, variant_images: variant_images, limit: 1 %}
  {%- else -%}
    <div class="product__media-item">
      <div
        class="product-media-container global-media-settings gradient{% if section.settings.constrain_to_viewport %} constrain-height{% endif %}"
        style="--ratio: 1.0; --preview-ratio: 1.0;"
      >
        {{ 'product-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
      </div>
    </div>
  {%- endunless -%}
  {{ block.settings['custom-product'] }}
</div>
{% schema %}
{
  "name": "Custom Product",
  "class":"custom-product-main",
  "settings": [
    {
      "type": "product",
      "id": "custom-product",
      "label": "Product"
    },
  ],
  "presets": [
    { "name": "Custom Product" },
  ]
}
{% endschema %}
